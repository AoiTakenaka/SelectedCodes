{
  "name": "hffl",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "prod": "run-s build tailwind postcss img",
    "start": "run-p hot dev",
    "tailwind": "cross-env NODE_ENV=production tailwindcss build ./src/sass/modules.css -o ./public/css/modules.css",
    "postcss": "postcss ./public/css -d ./public/css --no-map",
    "hot": "browser-sync start --config ./utils/browsersync.js",
    "format:html": "prettier './public/**/*.{html,php}' --write",
    "format:css": "prettier './src/**/*.{css,scss,sass,lesss}' --write",
    "format:js": "prettier --write './src/js/**/*.{js,jsx}'",
    "lint": "eslint --fix './src/js/**/*.{js,jsx}'",
    "fix": "run-s format:css format:html format:js lint",
    "img": "node ./utils/image-compress.js"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@prettier/plugin-php": "^0.16.2",
    "archiver": "^5.2.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.1.0",
    "browser-sync": "^2.26.7",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "current-git-branch": "^1.1.0",
    "dayjs": "^1.10.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-hf": "^0.0.4",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "figlet": "^1.5.0",
    "ftp-deploy": "^2.4.0",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "imagemin-svgo": "^8.0.0",
    "mini-css-extract-plugin": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.7",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.1.1",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "10.1.0",
    "sleep": "^6.3.0",
    "style-loader": "^2.0.0",
    "webpack": "5.5.0",
    "webpack-cli": "4.2.0",
    "webpack-glsl-loader": "^1.0.1"
  },
  "browserslist": [
    "ie >= 11"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "core-js": "^3.9.1",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.51.0",
    "tailwindcss": "^2.0.3",
    "three": "^0.136.0"
  }
}
